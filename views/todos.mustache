<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>todo</title>
  </head>
  <body>
    <h1>To do</h1>

      <form action="/" method="post">
      <div>
        <input type="text" name="todo" placeholder="Enter To Do" />
        <button type="submit">Add to list</button>
      </div>
    </form>
    <ul>
      {{#todo}}
       <li>
         {{#complete}}
            {{name}}
           {{/complete}}
         {{^complete}}
           <del> {{name}} </del>
           {{/complete}}

          <!-- {{#complete}} <del> {{/complete}}
            {{name}}
          {{#complete}} </del> {{/complete}} -->
         <form action="/{{id}}" method="post">
          <button type="submit" name="button" value="{{id}}">Completed</button>
         </form>
       </li>
       {{/todo}}
    </ul>
  </body>
</html>
